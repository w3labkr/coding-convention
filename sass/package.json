{
    "name": "styleguide",
    "version": "1.0.0",
    "description": "Style guides for W3LabKr open-source projects.",
    "main": "index.js",
    "scripts": {
        "clean:dir": "rm -rf node_modules",
        "clean:cache": "npm cache clean --force",
        "clean": "npm run clean:dir && npm run clean:cache",
        "build": "npm run clean && npm install",
        "prepare": "husky install"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/w3labkr/styleguide.git"
    },
    "keywords": [],
    "author": "W3LabKr",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/w3labkr/styleguide/issues"
    },
    "homepage": "https://github.com/w3labkr/styleguide#readme",
    "devDependencies": {
        "browserslist": "^4.20.3",
        "eslint": "^8.14.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^8.0.1",
        "js-beautify": "^1.14.3",
        "lint-staged": "^13.0.1",
        "prettier": "^2.6.2",
        "stylelint": "^14.8.2",
        "stylelint-config-prettier-scss": "^0.0.1",
        "stylelint-config-rational-order": "^0.1.2",
        "stylelint-config-recommended-scss": "^6.0.0",
        "stylelint-order": "^5.0.0",
        "stylelint-scss": "^4.2.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.html": [
            "js-beautify *.html"
        ],
        "*.{css, scss, less, postcss}": [
            "stylelint --fix",
            "prettier --write"
        ],
        "*.{js, jsx, ts, tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.php": [
            "php ./vendor/bin/php-cs-fixer fix"
        ]
    }
}
