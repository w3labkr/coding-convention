<?xml version="1.0"?>
<ruleset name="MyPSR2">

    <description>The PSR-2 coding standard.</description>

    <!-- 2. General -->

    <!-- 2.1 Basic Coding Standard -->

    <!-- Include the whole PSR-2 standard -->
    <rule ref="PSR2" />

    <!-- 2.3 Lines -->

    <!-- The soft limit on line length MUST be -1 characters; automated style checkers MUST warn but MUST NOT error at the soft limit. -->
    <rule ref="Generic.Files.LineLength">
        <exclude name="Generic.Files.LineLength"/>
    </rule>

</ruleset>
