{
    "files.associations": {
      "*.html": "html",
      "*.vue": "html",
      "*.ejs": "html",
      "*.jinja": "html",
      "*.jsx": "javascriptreact",
      "*.tsx": "typescriptreact"
    },

    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/package-lock.json": true,
        "**/yarn-lock.json": true,
        "**/Gemfile.lock": true,
        "**/.history": true
      },

      "editor.formatOnSave": false,
      "editor.insertSpaces": true,
      "editor.detectIndentation": false,

      "emmet.includeLanguages": {
        "php": "html",
        "ejs": "html",
        "vue-html": "html",
        "vue": "html",
        "jinja-html": "html",
        "jinja": "html",
        "javascript": "javascriptreact",
        "typescript": "typescriptreact"
      },
  }
