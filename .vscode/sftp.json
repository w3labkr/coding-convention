{
    "name": "name",
    "syncMode": "full",
    "syncOption": {
        "update": true,
        "delete": true
    },
    "ignore": [
        "**/.git",
        "**/.svn",
        "**/.hg",
        "**/CVS",
        "**/.DS_Store",
        "**/Thumbs.db",
        "**/node_modules",
        "**/bower_components",
        "**/*.code-search",
        "**/.vscode", 
        "**/.history",
    ],
    "profiles": {
        "ftp": {
            "host": "127.0.0.1",
            "protocol": "ftp",
            "port": 21,
            "username": "username",
            "password": "password",
            "remotePath": "/",
            "downloadOnOpen": false,
            "uploadOnSave": true
        },
        "sftp": {
            "host": "127.0.0.1",
            "protocol": "sftp",
            "port": 22,
            "username": "username",
            "password": "password",
            "remotePath": "/",
            "privateKeyPath": "~/.ssh/id_rsa",
            "downloadOnOpen": false,
            "uploadOnSave": true
        }
    },
    "defaultProfile": "ftp",
    "$schema": "https://raw.githubusercontent.com/liximomo/vscode-sftp/master/schema/sftp.schema.json"
}
